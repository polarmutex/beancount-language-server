{
  "name": "beancount-langserver",
  "displayName": "beancount-language-server",
  "description": "beancount language server",
  "author": "Brian Ryall",
  "license": "MIT",
  "version": "1.8.1",
  "repository": "https://github.com/polarmutex/beancount-language-server.git",
  "homepage": "https://github.com/polarmutex/beancount-language-server",
  "bugs": "https://github.com/polarmutex/beancount-language-server/issues",
  "publisher": "polarmutex",
  "categories": [],
  "keywords": [
    "beancount",
    "plaintext",
    "accounting"
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "scripts": {
    "package": "pnpm exec vsce package --no-dependencies -o dist/beancount-language-server.vsix",
    "package:all": "node ./scripts/package-all.mjs",
    "download:binaries": "python ./scripts/fetch_server_binaries.py",
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node20 --sourcemap",
    "build": "pnpm run build-base && pnpm run package",
    "watch": "pnpm run build-base --sourcemap --watch",
    "lint": "prettier --check . && eslint -c eslint.config.mjs --ext .ts ./src",
    "fix": "prettier --write . && eslint -c eslint.config.mjs --ext .ts ./src --fix"
  },
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.7.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "activationEvents": [
    "onLanguage:beancount"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "beancountLangServer.reloadServer",
        "title": "Beancount: Reload Language Server"
      },
      {
        "command": "beancountLangServer.startServer",
        "title": "Beancount: Start Language Server"
      },
      {
        "command": "beancountLangServer.stopServer",
        "title": "Beancount: Stop Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Beancount Language Server Configuration",
      "properties": {
        "beancountLangServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "beancountLangServer.journalFile": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to the beancount journal"
        },
        "beancountLangServer.formatting": {
          "scope": "resource",
          "description": "formatting config",
          "type": "object",
          "default": {},
          "additionalProperties": true,
          "properties": {
            "prefix_width": {
              "type": "number"
            },
            "num_width": {
              "type": "number"
            },
            "currency_column": {
              "type": "number"
            },
            "account_amount_spacing": {
              "type": "number"
            },
            "number_currency_spacing": {
              "type": "number"
            },
            "indent_width": {
              "type": "number"
            }
          }
        },
        "beancountLangServer.beanCheck": {
          "scope": "resource",
          "description": "Bean-check execution options",
          "type": "object",
          "default": {},
          "additionalProperties": true,
          "properties": {
            "method": {
              "type": "string",
              "enum": [
                "system",
                "python-system",
                "python-embedded"
              ],
              "default": "python-system",
              "description": "Execution method for bean-check (system, python-system, python-embedded)."
            },
            "bean_check_cmd": {
              "type": "string",
              "description": "Path to bean-check executable when using the system method."
            },
            "python_cmd": {
              "type": "string",
              "description": "Python executable to use for the python methods."
            }
          }
        },
        "beancountLangServer.serverPath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to the beancount-language-server executable"
        }
      }
    },
    "languages": [
      {
        "id": "beancount",
        "extensions": [
          ".beancount",
          ".bean"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "__metadata": {
    "id": "b3caba90-f41e-4698-adf5-23463f6daba3",
    "publisherDisplayName": "polarmutex",
    "publisherId": "3205ea90-ca1b-4274-bc5b-0a1721811b70"
  }
}
