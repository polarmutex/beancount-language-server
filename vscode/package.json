{
  "name": "beancount-langserver",
  "displayName": "beancount-language-server",
  "description": "beancount language server",
  "author": "Brian Ryall",
  "license": "MIT",
  "version": "1.2.5",
  "repository": "https://github.com/polarmutex/beancount-language-server.git",
  "homepage": "https://github.com/polarmutex/beancount-language-server",
  "bugs": "https://github.com/polarmutex/beancount-language-server/issues",
  "publisher": "polarmutex",
  "categories": [],
  "keywords": [
    "beancount",
    "plaintext",
    "accounting"
  ],
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.66.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run build-base -- --minify",
    "package": "vsce package --no-dependencies -o beancount-language-server.vsix",
    "build-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --target=node20",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "lint": "prettier --check . && eslint -c eslint.config.js --ext .ts ./src",
    "fix": "prettier --write . && eslint -c eslint.config.js --ext .ts ./src --fix",
    "pretest": "tsc && npm run build"
  },
  "packageManager": "pnpm@10.26.2",
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.3",
    "@types/vscode": "~1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^2.8.8",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "activationEvents": [
    "onLanguage:beancount"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Beancount Language Server Configuration",
      "properties": {
        "beancountLangServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "beancountLangServer.journalFile": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to the beancount journal"
        },
        "beancountLangServer.formatting": {
          "scope": "resource",
          "description": "formatting config",
          "type": "object",
          "default": {},
          "additionalProperties": true,
          "properties": {
            "prefix_width": {
              "type": "number"
            },
            "num_width": {
              "type": "number"
            },
            "currency_column": {
              "type": "number"
            },
            "account_amount_spacing": {
              "type": "number"
            },
            "number_currency_spacing": {
              "type": "number"
            },
            "indent_width": {
              "type": "number"
            }
          }
        },
        "beancountLangServer.serverPath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "Path to the beancount-language-server executable"
        }
      }
    },
    "languages": [
      {
        "id": "beancount",
        "extensions": [
          ".beancount",
          ".bean"
        ]
      }
    ]
  },
  "__metadata": {
    "id": "b3caba90-f41e-4698-adf5-23463f6daba3",
    "publisherDisplayName": "polarmutex",
    "publisherId": "3205ea90-ca1b-4274-bc5b-0a1721811b70"
  }
}
