{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "rootDir": "src",
    "strict": true,
    "lib": ["es2019"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [ "./src/typings", "./node_modules/@types"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", ".vscode-test", "**/*.test.ts"]
}
